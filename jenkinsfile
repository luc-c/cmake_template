pipeline {
    agent any
    stages {
        stage('BuildAndTest') {
            matrix {
                agent any
                axes {
                    axis {
                        name 'PLATFORM'
                        values 'linux', 'windows', 'mac'
                    }
                    axis {
                        name 'ARCH'
                        values 'x86', 'x86_64', 'ARM'
                    }
					axis {
                        name 'CONFIG'
                        values 'Release', 'Debug'
                    }
                }
                stages {
                    stage('Build') {
                        steps {
                            echo "Do Build for ${PLATFORM} - ${ARCH} - ${CONFIG}"
                        }
                    }
                    stage('Test') {
                        steps {
                            echo "Do Test for ${PLATFORM} - ${ARCH}  - ${CONFIG}"
                        }
                    }
                }
            }
        }	
    }
}